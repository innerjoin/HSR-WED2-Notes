{{#if note._id}}
    <form action="/notes/{{note._id}}" method="post">
        <p>Titel:        <input name='title' value="{{note.title}}"></p>
        <p>Beschreibung: <textarea name='description' rows="10" cols="50">{{note.description}}</textarea></p>
        <p>Wichtigkeit:  <input name='importance' value="{{note.importance}}"></p>
        <p>Erledigt bis: <input name='dueDate' value="{{note.dueDate}}"></p>
        <div class="rating">
            {{#loop 4 note.importance note._id}}
                <input type="radio" id="{{this.id}}_importance" name="{{this.id}}_importance" value="{{this.index}}" /><label class="imp{{this.index}}" for="{{this.id}}_importance{{this.index}}">{{this.importanceType}}</label>
            {{/loop}}
        </div>
        <p><input type="submit" value="Save note"/></p>
    </form>
{{else}}
    <form action="/notes" method="post">
        <p>Titel:        <input name='title' placeholder='Titel'></p>
        <p>Beschreibung: <textarea name='description' rows="10" cols="50" placeholder='Beschreibung'></textarea></p>
        <p>Wichtigkeit:  <input name='importance' placeholder='Wichtigkeit [1]'></p>
        <p>Erledigt bis: <input name='dueDate' placeholder='Erledigt bis'></p>
        <div class="rating">
            <input type="radio" id="{{_id}}_importance4" name="importance" value="4"/><label class="imp4" for="{{_id}}_importance4">Immediate</label>
            <input type="radio" id="{{_id}}_importance3" name="importance" value="3"/><label class="imp3" for="{{_id}}_importance3">High</label>
            <input type="radio" id="{{_id}}_importance2" name="importance" value="2"/><label class="imp2" for="{{_id}}_importance2">Medium</label>
            <input type="radio" id="{{_id}}_importance1" name="importance" value="1"/><label class="imp1" for="{{_id}}_importance1">Low</label>
        </div>
        <input type="submit" value="Create Note"/>
    </form>
{{/if}}