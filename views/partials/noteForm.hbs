<label for="noteTitle">Title:</label>
<input type="text" id="noteTitle" name="title" value="{{note.title}}" />

<label for="noteDescription">Description:</label>
<textarea id="noteDescription" name="description" value="{{note.description}}"></textarea>

<label for="noteDueDate">Due Date:</label>
<input type="date" id="noteDueDate" name="dueDate" value="{{note.dueDate}}" />

<label for="noteImportance">Importance:</label>
    <p><input name='importance' value="{{note.importance}}"></p>
    <div class="rating">
        {{#loop 5 note.importance note._id}}
            <input type="radio" id="{{this.id}}_importance" name="{{this.id}}_importance" value="{{this.index}}" /><label class="imp{{this.index}}" for="{{this.id}}_importance{{this.index}}">{{this.importanceType}}</label>
        {{/loop}}
    </div>

